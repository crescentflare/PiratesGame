{
  "dataSets": {
    "layout": {
      "viewlet": "frameContainer",
      "width": "stretchToParent",
      "height": "stretchToParent",
      "backgroundColor": "$black",
      "recycling": true,
      "items": [
        {
          "viewlet": "splashAnimation",
          "width": "stretchToParent",
          "height": "stretchToParent",
          "gradientColor": "#0000a0",
          "backgroundImage": "app://background_loading",
          "autoAnimation": true,
          "on": true
        },
        {
          "viewlet": "linearContainer",
          "width": "stretchToParent",
          "gravity": "bottom",
          "recycling": true,
          "items": [
            {
              "viewlet": "splashLoadingBar",
              "width": "stretchToParent",
              "margin": [ 8, 0, 8, 0 ],
              "visibility": "hidden",
              "autoAnimation": true,
              "progress": 0
            },
            {
              "viewlet": "text",
              "width": "stretchToParent",
              "padding": [ 10, 4, 10, 10 ],
              "localizedText": "SPLASH_LOADING_TEXT",
              "textColor": "$textInverted",
              "textAlignment": "center",
              "visibility": "hidden"
            },
            {
              "viewlet": "spacer",
              "takeHeight": "bottomBar"
            },
            {
              "viewlet": "spacer",
              "takeHeight": "bottomSafeArea"
            }
          ]
        }
      ]
    }
  }
}
