<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.crescentflare.piratesgame">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <!-- Application -->
    <application
        android:name=".BaseApplication"
        android:allowBackup="true"
        android:label="@string/global_app"
        android:icon="@mipmap/icon_app"
        android:roundIcon="@mipmap/icon_app_round"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".page.activities.SplashActivity"
            android:label="@string/global_app"
            android:theme="@style/AppTheme.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>
