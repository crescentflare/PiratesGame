<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.crescentflare.piratesgame">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <!-- Application -->
    <application
        android:name=".BaseApplication"
        android:allowBackup="true"
        android:label="@string/global_app_icon_name"
        android:icon="@mipmap/icon_app"
        android:roundIcon="@mipmap/icon_app_round"
        android:theme="@style/AppTheme.NoActionBar">

        <activity
            android:name=".page.activities.SplashActivity"
            android:label="@string/global_app_name"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
                android:name=".page.activities.SummaryActivity"
                android:label="@string/global_app_name"
                android:configChanges="orientation|screenSize"/>

        <activity
                android:name=".page.activities.LevelActivity"
                android:label="@string/global_app_name"
                android:configChanges="orientation|screenSize"/>

        <activity android:name="com.crescentflare.dynamicappconfig.activity.ManageAppConfigActivity"/>
        <activity android:name="com.crescentflare.dynamicappconfig.activity.EditAppConfigActivity"/>
        <activity android:name="com.crescentflare.dynamicappconfig.activity.AppConfigStringChoiceActivity"/>
    </application>

</manifest>
